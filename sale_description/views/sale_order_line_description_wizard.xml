<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="html_description_wizard_actions" model="ir.actions.act_window">
        <field name="name">HTML Description</field>
        <field name="res_model">sale.order.line.description</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> 

    <record id="add_html_description_wizards_view_form" model="ir.ui.view">
        <field name="name">sale.order.line.description.form</field>
        <field name="model">sale.order.line.description</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
                <footer>
                    <button type="object" string="add description" name="action_ad_description" class="btn btn-primary" data-hotkey="q"/>
                    <button special="cancel" string="Discard" class="btn btn-secondary" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
